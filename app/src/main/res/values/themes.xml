<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkersApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->edit
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <!--        <item name="android:textStyle">bold</item>-->
    </style>

    <style name="CustomMenuItemStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textColor">@color/red</item>
    </style>

</resources>