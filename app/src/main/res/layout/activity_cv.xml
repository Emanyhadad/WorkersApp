<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_activity"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".Activities.CvActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_100sdp"
                android:alpha="0.1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/img_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_31sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/back_icon" />

                    <TextView
                        android:id="@+id/tvBasicInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/cairo_regular"
                        android:gravity="center"
                        android:text="البيانات الشخصية"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_46sdp"
                    android:layout_marginLeft="@dimen/_23sdp"
                    android:layout_marginTop="@dimen/_54sdp"
                    android:layout_marginRight="@dimen/_23sdp"
                    android:hint="فئة العمل">

                    <AutoCompleteTextView
                        android:id="@+id/CvWork"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_39sdp"
                        android:fontFamily="@font/cairo_regular"
                        android:inputType="none"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/_13ssp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_113sdp"
                    android:layout_marginLeft="@dimen/_23sdp"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_23sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Cv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_108sdp"
                        android:fontFamily="@font/cairo_regular"
                        android:gravity="top"
                        android:hint="تحدث عن نفسك"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/_11ssp" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/CvNext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_46sdp"
                    android:layout_marginLeft="@dimen/_23sdp"
                    android:layout_marginTop="@dimen/_157sdp"
                    android:layout_marginRight="@dimen/_23sdp"
                    android:background="@drawable/border_button"
                    android:fontFamily="@font/cairo_regular"
                    android:text="التالي"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />
            </LinearLayout>

        </FrameLayout>

</LinearLayout>