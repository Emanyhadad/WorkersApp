<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:layoutDirection="rtl"
    tools:context=".Activities.WorkOwnerProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            app:layout_scrollFlags="scroll|enterAlways">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sdp_20"
                android:background="#FFFFFF"
                app:cardCornerRadius="@dimen/sdp_10"
                app:cardElevation="@dimen/_1sdp"
                app:cardUseCompatPadding="true"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sdp_15"
                        android:layout_marginTop="@dimen/sdp_15"
                        android:layout_marginRight="@dimen/sdp_15"
                        android:layout_marginBottom="@dimen/sdp_5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgProfileOwner"
                            android:layout_width="@dimen/sdp_60"
                            android:layout_height="@dimen/sdp_60"
                            app:srcCompat="@drawable/work_owner" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/sdp_15"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvWorkOwnerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairo_bold"
                                android:text="محمد سعد"
                                android:textColor="#0E2E3B"
                                android:textSize="@dimen/sdp_textSize_14" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_pin" />

                                <TextView
                                    android:id="@+id/tvWorkOwnerCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="خانيونس"
                                    android:textColor="#0E2E3B"
                                    android:textSize="@dimen/sdp_textSize_12" />
                            </LinearLayout>
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvWorkOwnerNickName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cairo_regular"
                            android:text="ابو عمر"
                            android:textColor="#999999"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_regular"
                            android:text="4.8"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/baseline_star_24" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sdp_25"
                        android:layout_marginEnd="@dimen/sdp_25"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/employmentRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cairo_regular"
                                android:text="@string/employmentRate"
                                android:textColor="#999999"
                                android:textSize="@dimen/sdp_textSize_12" />

                            <TextView
                                android:id="@+id/tvEmploymentRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cairo_bold"
                                android:text="40%"
                                android:textColor="#0E2E3B"
                                android:textSize="@dimen/sdp_textSize_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/numberOfJobs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairo_regular"
                                android:text="@string/numberOfJobs"
                                android:textColor="#999999"
                                android:textSize="@dimen/sdp_textSize_12" />

                            <TextView
                                android:id="@+id/tvNumberOfJobs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cairo_bold"
                                android:text="2"
                                android:textColor="#0E2E3B"
                                android:textSize="@dimen/sdp_textSize_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/openedJobs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cairo_regular"
                                android:text="@string/openedJobs"
                                android:textColor="#999999"
                                android:textSize="@dimen/sdp_textSize_12" />

                            <TextView
                                android:id="@+id/tvOpenedJobs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1"
                                android:textColor="#0E2E3B"
                                android:textSize="@dimen/sdp_textSize_16" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDateOfJoin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sdp_15"
                        android:layout_marginTop="@dimen/sdp_8"
                        android:layout_marginBottom="@dimen/sdp_20"
                        android:fontFamily="@font/cairo_regular"
                        android:gravity="bottom|left"
                        android:text="تاريخ الانضمام : 21/3/2023"
                        android:textColor="#9A9A9A"
                        android:textSize="@dimen/_6ssp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/finishedJobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sdp_20"
                android:layout_marginTop="@dimen/_200sdp"
                android:layout_marginEnd="@dimen/sdp_20"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/finishedJobs"
                android:textColor="#0E4C75"
                android:textSize="@dimen/sdp_textSize_14"
                app:layout_collapseMode="pin" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_220sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcFinishedJobs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sdp_20"
            android:layout_marginTop="@dimen/sdp_20"
            android:layout_marginEnd="@dimen/sdp_20" />
    </LinearLayout>
    <!--    <androidx.core.widget.NestedScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:fillViewport="true"-->
    <!--        app:layout_behavior="@string/appbar_scrolling_view_behavior">-->

    <!--        &lt;!&ndash; المحتوى الذي لا يتم تمريره &ndash;&gt;-->

    <!--    </androidx.core.widget.NestedScrollView>-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
